@using AgnosticAlbatros.Services
@inject AgnosticAlbatros.Services.IUserService userService
@model AgnosticAlbatros.Models.Api.UserDetailData

<div id="users-create" class="content-container">
    <h2>User Detail</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Update">
                <div hidden>
                    <label asp-for="User.ID" class="control-label"></label>
                    <input asp-for="User.ID" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="control-label"></label>

                    <input asp-for="User.Email" class="form-control" />

                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                @if (userService.User.Admin)
                {
                    <div class="form-group">
                        <label asp-for="User.PassWord" class="control-label"></label>
                        <input asp-for="User.PassWord" class="form-control" disabled />
                        <span asp-validation-for="User.PassWord" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="User.LastName" class="control-label"></label>
                    <input asp-for="User.LastName" class="form-control" />
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.FirstName" class="control-label"></label>
                    <input asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Tel1" class="control-label"></label>
                    <input asp-for="User.Tel1" class="form-control" />
                    <span asp-validation-for="User.Tel1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Tel2" class="control-label"></label>
                    <input asp-for="User.Tel2" class="form-control" />
                    <span asp-validation-for="User.Tel2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.KitchenID" class="control-label">Kitchen</label>
                    <select asp-for="User.KitchenID">
                        @foreach (var item in Model.Kitchens)
                        {
                            @if (Model.User.KitchenID == item.ID)
                            {
                                <option value="@item.ID" selected>@item.Name</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="User.UserTitleID" class="control-label">Title</label>

                    <select asp-for="User.UserTitleID">
                        @foreach (var item in Model.UserTitles)
                        {
                            @if (Model.User.UserTitleID == item.ID)
                            {
                                <option value="@item.ID" selected>@item.Title</option>
                            }
                            else
                            {
                                <option value="@item.ID">@item.Title</option>
                            }

                        }
                    </select> 
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>