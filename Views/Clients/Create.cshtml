@model AgnosticAlbatros.Models.Api.ClientsData

<div id="users-create" class="content-container">
    <h2>New Client</h2>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Client.Name" class="control-label"></label>
                    <input asp-for="Client.Name" class="form-control" />
                    <span asp-validation-for="Client.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.VAT" class="control-label"></label>
                    <input asp-for="Client.VAT" class="form-control" />
                    <span asp-validation-for="Client.VAT" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Tel1" class="control-label"></label>
                    <input asp-for="Client.Tel1" class="form-control" />
                    <span asp-validation-for="Client.Tel1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.Tel2" class="control-label"></label>
                    <input asp-for="Client.Tel2" class="form-control" />
                    <span asp-validation-for="Client.Tel2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.AddressStreet" class="control-label"></label>
                    <input asp-for="Client.AddressStreet" class="form-control" />
                    <span asp-validation-for="Client.AddressStreet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.AddressNumber" class="control-label"></label>
                    <input asp-for="Client.AddressNumber" class="form-control" />
                    <span asp-validation-for="Client.AddressNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.CityID" class="control-label">City</label>
                    <select asp-for="Client.CityID">
                        @foreach (var item in Model.Cities)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                    </select>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>