@using AgnosticAlbatros.Services
@inject IUserService userService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DeliGate</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/star-gate.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />


    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/lib/material-dashboard-v1.2.0/css/material-dashboard.css" />
    <link rel="stylesheet" href="~/css/colormind-material-dashboard.css" />
</head>

<body>
    @if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count() > 0)
    {
        @foreach (var error in ViewData.ModelState[""].Errors)
        {
            <div data-notify="container" class="col-xs-11 col-sm-4 alert alert-danger alert-with-icon animated fadeInDown" role="alert" data-notify-position="top-right" style="display: inline-block; margin: 0px auto; position: fixed; transition: all 0.5s ease-in-out; z-index: 1031; top: 20px; right: 20px;">
                <button type="button" aria-hidden="true" class="close" data-dismiss="alert">×</button>
                <i data-notify="icon" class="material-icons">error</i>
                <span data-notify="title"></span>
                <span data-notify="message">@error.ErrorMessage</span>
            </div>
        }

        ViewData.ModelState[""].Errors.Clear();
    }



    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/material-dashboard-v1.2.0/js/material.min.js"></script>
    <script src="~/lib/material-dashboard-v1.2.0/js/chartist.min.js"></script>
    <script src="~/lib/material-dashboard-v1.2.0/js/arrive.min.js"></script>
    <script src="~/lib/material-dashboard-v1.2.0/js/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/lib/material-dashboard-v1.2.0/js/bootstrap-notify.js"></script>
    <script src="~/lib/material-dashboard-v1.2.0/js/material-dashboard.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>